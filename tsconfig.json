{
  "include": ["src"],
  "compilerOptions": {
    "paths": {
      "#WebSocket": ["./src/WebSocket.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2017",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  },
}
